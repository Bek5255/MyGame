<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintGame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <ImageView
        android:id="@+id/fonGame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@xml/grad_2" />

    <LinearLayout
        android:id="@+id/statusLinear"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintStart_toStartOf="parent">


        <ImageButton
            android:id="@+id/restart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0000"
            android:scaleType="centerInside"
            android:src="@drawable/ic_restart"
            android:textSize="22pt" />

        <ImageButton
            android:id="@+id/pause"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0000"
            android:scaleType="centerInside"
            android:src="@drawable/ic_pause"
            android:textSize="22pt" />

        <ImageButton
            android:id="@+id/finish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0000"
            android:scaleType="centerInside"
            android:src="@drawable/ic_exit" />

    </LinearLayout>

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/crillee_extra_bold_italic_plain"
        android:scaleType="centerInside"
        android:src="@drawable/ic_restart"
        android:textColor="@color/white"
        android:textSize="22pt"
        app:layout_constraintBottom_toTopOf="@+id/statusLinear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutGame" />

    <LinearLayout
        android:id="@+id/linearLayoutGame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                style="@style/linear"
                android:layout_weight="1" />

            <Button
                style="@style/linear"
                android:layout_weight="1" />

            <Button
                style="@style/linear"
                android:layout_weight="1" />

            <Button
                style="@style/linear"
                android:layout_weight="1" />

            <Button
                style="@style/linear"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                style="@style/linear"
                android:layout_weight="1" />

            <Button
                style="@style/linear"
                android:layout_weight="1" />

            <Button
                style="@style/linear"
                android:layout_weight="1" />

            <Button
                style="@style/linear"
                android:layout_weight="1" />

            <Button
                style="@style/linear"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                style="@style/linear"
                android:layout_weight="1" />

            <Button
                style="@style/linear"
                android:layout_weight="1" />

            <Button
                style="@style/linear"
                android:layout_weight="1" />

            <Button
                style="@style/linear"
                android:layout_weight="1" />

            <Button
                style="@style/linear"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                style="@style/linear"
                android:layout_weight="1" />

            <Button
                style="@style/linear"
                android:layout_weight="1" />

            <Button
                style="@style/linear"
                android:layout_weight="1" />

            <Button
                style="@style/linear"
                android:layout_weight="1" />

            <Button
                style="@style/linear"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                style="@style/linear"
                android:layout_weight="1" />

            <Button
                style="@style/linear"
                android:layout_weight="1" />

            <Button
                style="@style/linear"
                android:layout_weight="1" />

            <Button
                style="@style/linear"
                android:layout_weight="1" />

            <Button
                style="@style/linear"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/hour"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@drawable/ic_min"
            app:srcCompat="@drawable/ic_hours" />

        <ImageView
            android:id="@+id/sek"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@drawable/ic_min"
            app:srcCompat="@drawable/ic_sek" />

        <ImageView
            android:id="@+id/min"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@drawable/ic_min"
            app:srcCompat="@drawable/ic_min" />

        <Chronometer
            android:id="@+id/chronometer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/infobubble"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="10pt" />

    </FrameLayout>

    <ImageView
        android:id="@+id/icPause"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#a000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_pause"
        tools:visibility="invisible" />


</androidx.constraintlayout.widget.ConstraintLayout>